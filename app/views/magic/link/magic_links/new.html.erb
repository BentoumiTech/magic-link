<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for @magic_link do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <%= f.submit "Email me a sign in link", class: "btn btn-primary btn-block" %>
    <% end %>
    <br>
    <%= link_to "Back", :back %>
  </div>
</div>
